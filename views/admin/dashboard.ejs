







    <!-- As a heading -->

    

   

    <form  action="/admin/search" class="mt-4" method="post">
        
        <div class="col-auto">
          <label for="inputPassword2" class="">Search here</label>
          <input class="form-control" id="inputPassword2"  type="text" name="searchTerm" placeholder="Search users..." required>
          
        </div>
        <!-- <div class="col-auto">
          <button type="submit" class="btn bg-warning mb-3 mt-1 text-white">Search</button>
        </div> -->
      </form>

    <table class="table table-dark table-hover mt-4">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone number</th>
            <th scope="col">Verfied</th>
            <th scope="col">Admin Choice</th>
          </tr>
        </thead>
        <tbody>
            <%
    if(users.length > 0){
        for(let i = 0; i < users.length; i++){
    %>
    <tr>
        <th scope="row"><% [i] %></th>

        <td><%= users[i].name %></td>
        <td><%= users[i].email %></td>
        <td><%= users[i].mobile %></td>
        <td>
            <%
            if(users[i].is_verified == 0){
            %>
                <p>Not Verified</p>
            <%
            } else {
            %>
                <p>Verified</p>
            <%
            }
            %>
        </td>
        <td>
          
            <a class="btn btn-success" href="/admin/edit-user?id=<%= users[i]._id %>" role="button">Edit</a>
            <a class="btn btn-danger" href="/admin/delete-user?id=<%= users[i]._id %>" role="button">Delete</a>
         
            
           
        </td>
    </tr>
<%
}
} else {
%>
<tr>
    <td colspan="5">Users Not Found</td>
</tr>
<%
}
%>
          
          
        </tbody>
      </table>


    

      <a class="btn btn-primary" href="/admin/new-user" role="button">Add new user</a>
      <a href="/admin/home" class="btn btn-info">Go to Home</a>
   


