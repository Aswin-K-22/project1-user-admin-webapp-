


  

<!--  editing form -->

      <form action="" method="post" class="bg-light m-5">
        
          <legend>Edit User</legend>
          <div class="mb-3">
            <label for="disabledTextInput" class="form-label">User name</label>
            <input type="name" id="disabledTextInput" class="form-control" placeholder="Enter name" name="name" value="<%= user.name %>"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">User email</label>
            <input type="email" id="disabledTextInput" class="form-control" placeholder="Enter email" name="email" value="<%= user.email %>"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">User Phone number</label>
            <input type="text" id="disabledTextInput" class="form-control" placeholder="Enter phonenumber" name="mob" value="<%= user.mobile %>"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">Verified</label>
            <input   name="verify" type="radio" value="1" <% if(user.is_verified == 1){ %> checked <% } %>>
          </div>
          <div class="mb-3">
            
            <label >Unverified</label>
            <input  type="radio" name="verify" value="0" <% if(user.is_verified == 1){ %> checked <% } %> >
            <input id="disabledTextInput" class="form-control" type="hidden" name="id" value="<%= user._id %>">
          </div>
          <input type="submit" class="btn btn-primary" value="Update User">
        
      </form>
      <a class="btn btn-info" href="/admin/" role="button">Go to Home</a>
      <a class="btn btn-secondary" href="/admin/dashboard" role="button">Go to Dashboard</a>
      
   