


<!--  editing form -->

      <form action="" method="post" class="bg-light m-5">
        <% if(typeof message !== 'undefined'){%>
          <p style="color: red;">
              <%= message %>
          </p>
          <% } %>
        
          <legend>Add  user</legend>
          <div class="mb-3">
            <label for="disabledTextInput" class="form-label">User name</label>
            <input type="name" id="disabledTextInput" class="form-control" placeholder="Enter name" name="name"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">User email</label>
            <input type="email" id="disabledTextInput" class="form-control" placeholder="Enter email" name="email"   required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">User Phone number</label>
            <input type="text" id="disabledTextInput" class="form-control" placeholder="Enter phonenumber" name="mob"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">User Password</label>
            <input type="password" id="disabledTextInput" class="form-control" placeholder="User Password" name="password"  required>
          </div>
          <div class="mb-3">
            <label for="disabledSelect" class="form-label">Verified</label>
            <input   name="verify" type="radio" value="1" >
            <input type="hidden" name="url" >
          </div>
          <div class="mb-3">
            
            <label >Unverified</label>
            <input  type="radio" name="verify" value="0" >
            
          </div>
          

          
          <div class="d-flex align-items-center justify-content-center pb-4">
            <p class="mb-0 me-2">Add user detatils to our user database</p>
            <button type="submit" class="btn btn-primary">Add new user</button>
         </div>
         <a class="btn btn-info" href="/admin/" role="button">Go to Home</a>
         <a class="btn btn-secondary" href="/admin/dashboard" role="button">Go to Dashboard</a>
      </form>
      
      
   